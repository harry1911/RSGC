@model IEnumerable<GCRS.Base.Room>

@{
    ViewBag.Title = "Create-IndexRoomPartial";
}

<hr />

<table id="rooms_table" class="table">
    <tr">
        <th>
            @Html.DisplayNameFor(model => model.RoomTypeID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SquareMts)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Features)
        </th>
        @if (!(bool)ViewData["details"])
        {
            <th></th>
        }
        </tr>

        @foreach (var item in Model)
        {
            <tr id="@item.RoomID">
                <td>
                    @Html.DisplayFor(modelItem => item.RoomTypeID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SquareMts)
                </td>
                <td>
                    @*@Html.DisplayFor(ViewBag.StringFeatures)*@
                </td>
                <td>
                    @if (!(bool)ViewData["details"])
                {
                        <a href="javascript:void(0)" class="event_list btn btn-link">Remover</a>
                    }
                </td>
            </tr>
        }
</table>