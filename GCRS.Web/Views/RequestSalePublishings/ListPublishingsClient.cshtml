@model IEnumerable<GCRS.Base.SalePublishing>

@{
    ViewBag.Title = "Mis Publicaciones de Venta";
}

<h2>Mis publicaciones de Venta</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Realtor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CommissionPercent)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Realtor.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CommissionPercent)
                </td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.RequestPublishingID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.RequestPublishingID })*@
                    <div class="form-group">
                        <div class="btn-group btn-group-sm" data-toggle="buttons">
                            <input type="submit" value="Ver compradores" class="btn btn-success" onclick="location.href='@Url.Action("ListSellOwner", "BuyRequests", new { id = item.PublishingID })'" />
                        </div>
                    </div>
                </td>
            </tr>
        </tbody>
    }

</table>
