@model GCRS.Base.RentPublishing

@{
    ViewBag.Title = "Publish";
}

<h2>Detalles</h2>
<div class="row">
    <div class="col-lg-4">
        @*<img src="@Url.Content(Model.Images.Select(c=>c.Path).First())" alt="test" width="200" height="200">*@
        @foreach (var image in Model.Images)
        {
            <img src="@(image.Path!=null?Url.Content(image.Path):Url.Content("~/Content/Pictures/noimage.jpg"))" alt="test" width="256" height="256">
        }
    </div>
    <div class="col-lg-4">
        <p>@Model.User.Name</p>
        <p>@Model.User.Phone</p>
        <p>@Model.User.Email</p>
    </div>
    <div class="col-lg-3">
        <p>@Model.Description</p>
    </div>
    <div class="col-lg-1">
        <p>@Model.Price</p>
    </div>
</div>
<div class="row">
    <div class="col-lg-4">
        <p>@ViewBag.Info</p>
    </div>
</div>
<div class="form-group">
    <input type="submit" value="Alquilar" class="btn btn-success" onclick="location.href='@Url.Action("InitToPending", "RentRequests", new { id = (int)ViewBag.Id })'" />
    
</div>
